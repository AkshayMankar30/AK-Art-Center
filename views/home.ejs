<!-- subscribe section -->
<section id="subscribe" class="text-center">
    <form action="/" method="post">
        <h5>Subscribe to our Abstract Art Center</h5>
        <input type="email" name="email" class="emailInput form-control-lg" placeholder="Your email address...">
        <button type="submit" class=" btn-lg text-light">Subscribe now</button>
    </form>
</section>
